
# Environment Variables Template for Learnwinning.iiskills.in

# Firebase Configuration (Required for production)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Supabase Configuration (Alternative to Firebase - Recommended)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Deployment Configuration
NEXT_PUBLIC_SITE_URL=https://learnwinning.iiskills.in
NEXT_PUBLIC_API_URL=https://learnwinning.iiskills.in/api

# Application Settings
NEXT_PUBLIC_APP_NAME="Live Like a Winner"
NEXT_PUBLIC_COURSE_PRICE=99
NEXT_PUBLIC_CURRENCY=INR

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Admin Settings
ADMIN_PASSWORD=admin

# Environment
NODE_ENV=production
